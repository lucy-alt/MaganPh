<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".Gallery1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debut"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn1"
            android:layout_width="270dp"
            android:text="Purple theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
            android:layout_height="70dp"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="270dp"
                android:text="Pink theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="270dp"
                android:text="Red Roses theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Black theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Blue Magic theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Disney theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Princess theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Queen theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Cinderela theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Cute theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Minimal theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>
            <Button
                android:layout_width="270dp"
                android:text="Royal theme"
                android:backgroundTint="#ad8e4c"
                android:layout_gravity="center"
                android:layout_height="70dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>